<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingBottom="8dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:letterSpacing="0.01"
        android:maxLines="1"
        android:textColor="@color/taigbugreport_black"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvSize"
        app:layout_constraintEnd_toStartOf="@+id/tvSize"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvSize"
        app:layout_constraintVertical_bias="0.6"
        tools:text="Screenshot-20170529-1404dfgdfgdfgdfgdfgfdg53123123123123123"/>

    <TextView
        android:id="@+id/tvSize"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:letterSpacing="0.01"
        android:textColor="#b7b7b7"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/ibDelete"
        app:layout_constraintEnd_toStartOf="@+id/ibDelete"
        app:layout_constraintTop_toTopOf="@+id/ibDelete"
        tools:text="73kb"/>

    <ImageButton
        android:id="@+id/ibDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/techfunderbugreport_bg_transparent_selector"
        android:padding="14dp"
        android:src="@drawable/ic_keyboard_remove"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/ibDelete"
        android:background="#e1e1e1"/>
</android.support.constraint.ConstraintLayout>